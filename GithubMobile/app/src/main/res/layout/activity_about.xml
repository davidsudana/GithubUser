<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.view.about.AboutActivity">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:contentDescription="@string/about"
        android:src="@drawable/profil" />

    <TextView
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/about_name" />

    <TextView
        android:id="@+id/tv_linkedin"
        style="@style/TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:onClick="onClick"
        android:text="@string/about_name"
        app:drawableStartCompat="@drawable/ic_linkedin" />

    <TextView
        android:id="@+id/tv_github"
        style="@style/TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:onClick="onClick"
        android:text="@string/about_github"
        app:drawableStartCompat="@drawable/ic_github" />

    <TextView
        style="@style/TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:text="@string/about_email"
        app:drawableStartCompat="@drawable/ic_email" />

    <TextView
        style="@style/TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:text="@string/about_location"
        app:drawableStartCompat="@drawable/ic_location" />

</LinearLayout>